<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/settings"
            android:textColor="#d8601a"
            android:textSize="60sp"
            android:textStyle="bold" />

        <CheckBox
            android:layout_marginTop="20dp"
            android:id="@+id/chkManual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="90dp"
            android:text="@string/manual"
            android:textColor="#d8601a"
            android:textSize="60sp"
            android:textStyle="bold"
            tools:text="Manual Playlist Advance and play CDG files" />

        <CheckBox
            android:id="@+id/chkScreenOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="90dp"
            android:text="@string/screen"
            android:textColor="#d8601a"
            android:textSize="60sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/chkLandscape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="90dp"
            android:text="@string/landscape"
            android:textColor="#d8601a"
            android:textSize="60sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/chkPortrait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="90dp"
            android:text="@string/portrait"
            android:textColor="#d8601a"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewSetHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/set_home"
            android:textColor="#d8601a"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewHomeDir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textColor="#ffffff"
            android:textSize="60sp" />

        <!--  Folder icon too big if use android:drawableStart="@drawable/folder_icon" -->

    </LinearLayout>

</ScrollView>