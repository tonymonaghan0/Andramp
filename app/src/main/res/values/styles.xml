<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Theme customizations can go here. -->

        <!-- Set to full screen i.e. No notification bar -->
        <item name="android:windowFullscreen">true</item>

        <!-- This will disable the blank screen with title that shows while getPlaylist loads
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsTranslucent">true</item>   -->

    </style>

    <!-- Starting activity theme on startup -->
    <style name="AppTheme.Launcher">
        <!-- Show Andramp loading logo on startup -->
        <item name="android:windowBackground">@drawable/my_drawable</item>

    </style>

</resources>
